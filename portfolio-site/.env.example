NEXT_PUBLIC_CONTACT_API_URL=/api/contact

# SMTP settings used by the /api/contact route
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_account@gmail.com
SMTP_PASS=your_gmail_app_password

# Optional overrides
FROM_EMAIL=your_account@gmail.com
CONTACT_TARGET_EMAIL=recipient@example.com
ACK_SUBJECT=Thanks for reaching out!
ACK_MESSAGE=Hi {{name}},\n\nThanks for getting in touch. I've received your message and will follow up within 24 hours.\n\nBest,\nSrinu
